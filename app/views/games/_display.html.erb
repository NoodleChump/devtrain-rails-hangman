<%= image_tag("hang#{(@game.progress_percentage / 10).to_i}.gif", :class => "hangman-image") %>

<% if @game.game_over? %>
  <% if @game.won? %>
    <h2>You guessed the word correctly with <%= pluralize(@game.number_of_guesses_remaining, "guess") %> remaining!</h2>
  <% else %>
    <h2>Sorry, you've run out of guesses!</h2>
  <% end %>
  <%= button_to 'Create New Game', new_game_path, {:class => "btn btn-primary", :method => :get} %>
<% else %>
  <h2><%= pluralize(@game.number_of_guesses_remaining, "Guess") %> Remaining</h2>
  <%= render 'guesses/form' %>
<% end %>
