$("#guesses").html("<%=raw escape_javascript(render(@game.guesses)) %>");
$('#censored_word').text("<%= GamePresenter.new(@game).censored_word %>");
$('#lives_remaining').text("<%= pluralize(@game.number_of_lives_remaining, 'Life') %> Remaining");
$('#hangman-image').attr("src" , "<%= image_path GamePresenter.new(@game).hangman_image_src, id: 'hangman-image' %>");

<% if @game.game_over? %>
  $('#game-spectate').attr("id", 'game');
  $('#lives_remaining').text('<%= current_user == @game.user ? "You" : @game.user.name %> guessed the word correctly with <%= pluralize(@game.number_of_lives_remaining, "life") %> remaining!');
<% end %>
