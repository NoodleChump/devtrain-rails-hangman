<% game_presenter = present @game %>
<% provide(:title, game_presenter.censored_word) %>

<p id="notice"><%= notice %></p>

<h1><%= game_presenter.censored_word %></h1>
<h2>Previous Guesses: <%= @game.guessed_letters.join(", ") %></h2>

<%= game_presenter.hangman_image %>

<% if @game.game_over? %>
  <% if @game.won? %>
    <h2><%= current_user == @game.user ? "You" : @game.user.name %> guessed the word correctly with <%= pluralize(@game.number_of_lives_remaining, "guess") %> remaining!</h2>
  <% else %>
    <h2><%= current_user == @game.user ? "Sorry, you've" : "#{@game.user.name} has" %> run out of guesses!</h2>
  <% end %>
  <%= button_to 'Start New Game', new_game_path, {:class => "btn btn-primary", :method => :get} %>
  <br />
  <%= button_to 'Create Custom Game', games_new_custom_path, {:class => "btn btn-primary", :method => :get} %>
<% else %>
  <h2><%= pluralize(@game.number_of_lives_remaining, "Life") %> Remaining</h2>
  <%= render 'guesses/form' %>
<% end %>

<%= link_to 'Back', games_path %>
