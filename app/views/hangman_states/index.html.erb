<p id="notice"><%= notice %></p>

<h1>Hangman Games</h1>

<table cellspacing="20">
  <thead>
    <tr>
      <th><%= sortable("player_name", "Player") %></th>
      <th>Revealed</th>
      <th><%= sortable("progress", "Progress") %></th>
      <th><%= sortable("remaining_guesses", "Guesses Remaining") %></th>
      <th>Play</th>
      <th>Delete</th>

      <!--<th>Edit</th>-->
    </tr>
  </thead>

  <tbody>
    <% @hangman_states.each do |hangman_state| %>
      <tr>
        <td><%= link_to hangman_state.player.name, hangman_state.player %></td>
        <td><%= hangman_state.censored_word %></td>
        <td><%= hangman_state.progress.to_s.humanize %></td>
        <td><%= hangman_state.number_of_guesses_remaining %></td>
        <td><%= link_to 'Play', hangman_state %></td>
        <td><%= link_to 'Delete', hangman_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <!--<td><%= link_to 'Edit', edit_hangman_state_path(hangman_state) %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Create New Game', new_hangman_state_path, {:class => "btn btn-primary", :method => :get} %>
