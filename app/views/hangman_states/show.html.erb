<p id="notice"><%= notice %></p>

<h1><%= @hangman_state.censored_word %></h1>
<h2>Previous Guesses: <%= @hangman_state.guessed_letters.join(", ") %></h2>

<% if @hangman_state.game_over? %>
  <% if @hangman_state.won? %>
    <h2>You guessed the word correctly with <%= pluralize(@hangman_state.number_of_guesses_remaining, "guess") %> remaining!</h2>
  <% else %>
    <h2>Sorry, you've run out of guesses!</h2>
  <% end %>
  <%= button_to 'Create New Game', new_hangman_state_path, {:class => "btn btn-primary", :method => :get} %>
<% else %>
  <h2><%= pluralize(@hangman_state.number_of_guesses_remaining, "Guess") %> Remaining</h2>
  <%= render 'guess_form' %>
<% end %>

<%= link_to 'Back', hangman_states_path %>
